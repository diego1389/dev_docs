@page
@model QuotesApi.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>
<form method="get" >
    <div class="form-group">
         <div class="input-group">
              <input type="search"
                     class="form-control"
                     asp-for="SearchTerm"/>
             <span class="input-group-btn">
                 <button class="btn btn-default">
                    Search
                 </button>
             </span>
         </div>
    </div>
</form>
<table class="table">
    @foreach(var restaurant in Model.Restaurants)
    {
    <tr>
        <td>
            @restaurant.Name
        </td>
        <td>
            @restaurant.Location
        </td>
        <td>
            @restaurant.Cuisine
        </td>
        <td>
            <a class="btn btn-default"
               asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                Details
            </a>
        </td>
        <td>
            <a class="btn btn-default"
               asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                Edit
            </a>
            <a class="btn btn-default"
               asp-page="./Delete" asp-route-restaurantId="@restaurant.Id">
                Delete
            </a>
        </td>
    </tr>
    }
</table>
<a asp-page=".\Edit" class="btn btn-default">Add New</a>
@section footer{
    <div>@Model.Message</div>
}
